{
  "format_version": "1.18.20",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:player"
    },
    "component_groups": {
      "ghost:form": {
        "minecraft:is_ghost": {},
        "minecraft:movement": { "value": 0.15 },
        "minecraft:can_fly": {},
        "minecraft:timer": {
          "time": 30.0,
          "looping": false,
          "time_down_event": { "event": "ghost:respawn" }
        }
      }
    },
    "components": {
      "minecraft:damage_sensor": {
        "triggers": {
          "on_damage": {
            "filters": { "test": "is_alive", "value": false },
            "event": "ghost:trigger"
          }
        }
      }
    },
    "events": {
      "ghost:trigger": { "add": { "component_groups": [ "ghost:form" ] } },
      "ghost:respawn": { "remove": { "component_groups": [ "ghost:form" ] } }
    }
  }
}
